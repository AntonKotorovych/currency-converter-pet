{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "baseUrl": "./src",
    "types": ["jest", "node", "@testing-library/jest-dom", "vite/client"],
    "resolveJsonModule": true,
    "outDir": "./public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"]
}
